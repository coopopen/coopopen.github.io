<mujoco model="YCB objects">

    <!-- Scene defaults -->
    <asset>
        <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2"
            width="512" height="512" mark="cross" markrgb=".8 .8 .8"/>
        <material name="matplane" reflectance="0.3" texture="texplane" texrepeat="1 1" texuniform="true"/>
    </asset>

    <!-- YCB assets and defaults -->
    <include file="includes/defaults_ycb.xml"/>
    <include file="includes/assets_fork.xml"/>
    <include file="includes/assets_knife.xml"/>
    <include file="includes/assets_spatula.xml"/>
    <include file="includes/assets_spoon.xml"/>
    <include file="includes/assets_plate.xml"/>

    <compiler inertiafromgeom="auto" inertiagrouprange="3 4" angle="radian" meshdir="../../franka_sim" texturedir="../../franka_sim"/>

    <worldbody>
        <!-- Set scene -->
        <light directional="true" diffuse=".4 .4 .4" specular="0.1 0.1 0.1" pos="0 0 5.0" dir="0 0 -1" castshadow="false"/>
        <light directional="true" diffuse=".6 .6 .6" specular="0.2 0.2 0.2" pos="0 0 4" dir="0 0 -1"/>
        <geom name="ground" type="plane" size="2 2 1" pos="0 0 0" quat="1 0 0 0" material="matplane"/>

        <body pos="1.4 0.0 0.01" euler="0 0 1.57">
            <include file="includes/body_fork.xml"/>
            <freejoint/>
        </body>
        <body pos="1.2 0.0 0.01" euler="0 0 1.57">
            <include file="includes/body_knife.xml"/>
            <freejoint/>
        </body>
        <body pos="1.0 0.0 0.01" euler="0 0 1.57">
            <include file="includes/body_spatula.xml"/>
            <freejoint/>
        </body>
        <body pos="0.8 0.0 0.01" euler="0 0 1.57">
            <include file="includes/body_spoon.xml"/>
            <freejoint/>
        </body>
        <body pos="0.6 0.0 0.01" euler="0 0 1.57">
            <include file="includes/body_plate.xml"/>
            <freejoint/>
        </body>

    </worldbody>

</mujoco>
